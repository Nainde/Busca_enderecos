select logradouros.nome as logradouro,bairros.nome as bairro, concat(cidades.nome,'/',estados.sigla) as localidade, logradouros.cep from estados join cidades on cidades.estado_id = estados.id join bairros on bairros.cidade_id = cidades.id left join logradouros on logradouros.bairro_id = bairros.id where logradouros.cep = 'Rua A' or upper(logradouros.nome) like upper('%Rua A%') or cidades.cep_geral_cidade = 'Rua A';

select logradouros.nome as logradouro,bairros.nome as bairro, concat(cidades.nome,'/',estados.sigla) as localidade, logradouros.cep from estados join cidades on cidades.estado_id = estados.id join bairros on bairros.cidade_id = cidades.id left join logradouros on logradouros.bairro_id = bairros.id where logradouros.cep = '45000-330' or upper(logradouros.nome) like upper('%45000-330') or cidades.cep_geral_cidade = '45000-330';
